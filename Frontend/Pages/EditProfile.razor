    // ===============================
    private string referralCode = "Loading...";
    private bool codeCopied = false;
    private UserReferralInfoDto? referralInfo;

    private class UserReferralInfoDto
    {
        public string ReferralCode { get; set; } = "";
        public int TotalReferrals { get; set; }
        public double TotalCreditsEarned { get; set; }
        public double CurrentReferrerReward { get; set; }
        public double CurrentRefereeReward { get; set; }
        public bool IsEnabled { get; set; }
    }

    // ===============================
    // üìã SUBSCRIPTION MANAGEMENT
    // ===============================
    private bool _loadingSubscription = true;
    private UserSubscriptionInfo? _activeSubscription;
    private bool _showCancelModal = false;
    private bool _cancelImmediate = false;
    private bool _processingCancel = false;
    private string? _cancelError;

    private class UserSubscriptionInfo
    {
        public int Id { get; set; }
        public int PlanId { get; set; }
        public string PlanName { get; set; } = "";
        public string Status { get; set; } = "";
        public DateTime CurrentPeriodEndUtc { get; set; }
        public bool IsCanceled { get; set; }
        public bool WillCancelAtPeriodEnd { get; set; }
    }

    private class ActiveSubscriptionResponse
    {
        public bool HasActiveSubscription { get; set; }
        public UserSubscriptionInfo? Subscription { get; set; }
    }

    // ===============================
    // üîÑ INIT
    // ===============================
    protected override async Task OnInitializedAsync()
    {
        // Initial theme value - will be updated in OnAfterRenderAsync
        currentTheme = "light";
        
        // Load referral info
        await LoadReferralInfo();
        
        // Load subscription info
        await LoadSubscriptionAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Use themeManager for consistent theme handling
                var savedTheme = await JS.InvokeAsync<string>("themeManager.applyTheme") ?? "light";
                if (savedTheme != currentTheme)
                {
                    currentTheme = savedTheme;
                    StateHasChanged();
                }
            }
            catch 
            { 
                currentTheme = "light";
            }
        }
    }

    // ===============================
    // üéÅ REFERRAL METHODS
    // ===============================
    private async Task LoadReferralInfo()
    {
        try
        {
            var user = Session.GetUser();
            if (user == null) return;

            var response = await Http.GetAsync($"api/referral/info/{user.Id}");
            if (response.IsSuccessStatusCode)
            {
                referralInfo = await response.Content.ReadFromJsonAsync<UserReferralInfoDto>();
                if (referralInfo != null)
                {
                    referralCode = referralInfo.ReferralCode;
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading referral info: {ex.Message}");
            referralCode = "ERROR";
        }
    }

    private async Task CopyReferralCode()
    {
        try
        {
            await JS.InvokeVoidAsync("navigator.clipboard.writeText", referralCode);
            codeCopied = true;
            StateHasChanged();
            
            await Task.Delay(2000);
            codeCopied = false;
            StateHasChanged();
        }
        catch
        {
            // Fallback for older browsers
            await JS.InvokeVoidAsync("alert", $"Your referral code is: {referralCode}");
        }
    }

    // ===============================
    // üìã SUBSCRIPTION METHODS
    // ===============================
    private async Task LoadSubscriptionAsync()
    {
        _loadingSubscription = true;
        try
        {
            var response = await Http.GetAsync("api/subscriptions/active");
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ActiveSubscriptionResponse>();
                if (result?.HasActiveSubscription == true && result.Subscription != null)
                {
                    _activeSubscription = result.Subscription;
                }
                else
                {
                    _activeSubscription = null;
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading subscription: {ex.Message}");
            _activeSubscription = null;
        }
        finally
        {
            _loadingSubscription = false;
        }
    }

    private void GoToPlans()
    {
        Navigation.NavigateTo("/plans");
    }

    private void ShowCancelModal()
    {
        _showCancelModal = true;
        _cancelImmediate = false;
        _cancelError = null;
    }

    private void HideCancelModal()
    {
        _showCancelModal = false;
        _cancelError = null;
    }

    private async Task ConfirmCancelSubscription()
    {
        if (_activeSubscription == null) return;

        _processingCancel = true;
        _cancelError = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/subscriptions/cancel", new
            {
                SubscriptionId = _activeSubscription.Id,
                Immediate = _cancelImmediate
            });

            if (response.IsSuccessStatusCode)
            {
                // Reload subscription data
                await LoadSubscriptionAsync();
                _showCancelModal = false;
                
                // Notify that plan changed so PlanStatusBar updates
                Session.NotifyPlanChanged();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                _cancelError = !string.IsNullOrEmpty(error) ? error : "Failed to cancel subscription. Please try again.";
            }
        }
        catch (Exception ex)
        {
            _cancelError = $"Error: {ex.Message}";
        }
        finally
        {
            _processingCancel = false;
        }
    }

