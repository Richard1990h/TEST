    private async Task UpdatePassword()
    {
        if (string.IsNullOrWhiteSpace(currentPassword))
        {
            passwordError = "Please enter your current password";
            return;
        }

        if (string.IsNullOrWhiteSpace(newPassword) || newPassword.Length < 6)
        {
            passwordError = "New password must be at least 6 characters";
            return;
        }

        if (newPassword != confirmPassword)
        {
            passwordError = "Passwords do not match";
            return;
        }

        if (currentPassword == newPassword)
        {
            passwordError = "New password must be different from current password";
            return;
        }

        isUpdatingPassword = true;
        passwordError = "";

        try
        {
            var user = Session.GetUser();
            if (user == null)
            {
                passwordError = "User session not found. Please log in again.";
                return;
            }

            var request = new
            {
                userId = user.Id,
                currentPassword,
                newPassword,
                confirmPassword
            };

            var response = await Http.PostAsJsonAsync(
                "api/account/change-password",
                request
            );

            if (response.IsSuccessStatusCode)
            {
                passwordSuccess = "Password updated successfully!";
                await Task.Delay(2000);
                ClosePasswordModal();
            }
            else
            {
                passwordError =
                    "Failed to change password. Please check your current password and try again.";
            }
        }
        catch (Exception ex)
        {
            passwordError = $"Error: {ex.Message}";
        }
        finally
        {
            isUpdatingPassword = false;
        }
    }

