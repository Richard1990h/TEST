@page "/admin/panel"
@inject NavigationManager Navigation
@inject UserSessionService Session


<PageTitle>Admin Panel</PageTitle>

<div class="admin-shell">
    <aside class="admin-sidebar">
        <div class="admin-brand">
            <div class="admin-brand-title">Admin</div>
            <div class="admin-brand-sub">Control Panel</div>
        </div>

        <div class="admin-nav">
            <button class="@NavBtn("overview")" @onclick="@(() => Select("overview"))">Overview</button>
            <button class="@NavBtn("users")" @onclick="@(() => Select("users"))">Users + Credits</button>
            <button class="@NavBtn("rewards")" @onclick="@(() => Select("rewards"))">Signup Rewards</button>
            <button class="@NavBtn("purchase-rewards")" @onclick="@(() => Select("purchase-rewards"))">Purchase Rewards</button>
            <button class="@NavBtn("settings")" @onclick="@(() => Select("settings"))">Settings</button>
            <button class="@NavBtn("plans")" @onclick="@(() => Select("plans"))">Plans</button>
            <button class="@NavBtn("subs")" @onclick="@(() => Select("subs"))">Subscriptions</button>
            <button class="@NavBtn("notifications")" @onclick="@(() => Select("notifications"))">Notifications</button>
            <button class="@NavBtn("support")" @onclick="@(() => Select("support"))">Support Tickets</button>
            <button class="@NavBtn("audit")" @onclick="@(() => Select("audit"))">Audit Log</button>
            <button class="@NavBtn("db")" @onclick="@(() => Select("db"))">Database</button>
            <button class="@NavBtn("snapshots")" @onclick="@(() => Select("snapshots"))">Snapshots</button>
            <button class="@NavBtn("knowledge")" @onclick="@(() => Select("knowledge"))">Knowledge</button>
            <button class="@NavBtn("pipelines")" @onclick="@(() => Select("pipelines"))">Pipelines</button>
        </div>

        <div class="admin-sidebar-footer">
            <button class="admin-nav-back" @onclick="@(() => Navigation.NavigateTo("/"))">
                ‚Üê Back to Chat
            </button>
        </div>
    </aside>

    <main class="admin-main">
        <div class="admin-topbar">
            <div>
                <div class="admin-title">@TitleIcon(Current) @TitleFor(Current)</div>
                <div class="admin-subtitle">Full system controls, live from database.</div>
            </div>

            <div class="admin-userpill">
                <span class="pill">@((Session.GetUser()?.Username) ?? "admin")</span>
                <span class="pill pill-muted">@((Session.GetUser()?.Role) ?? "")</span>
            </div>
        </div>

        @if (!IsAdmin())
        {
            <div class="admin-card admin-card-wide">
                <div class="admin-card-title">Access denied</div>
                <div class="admin-error">You must be an admin to access this page.</div>
            </div>
        }
        else
        {
            @switch (Current)
            {
                case "overview":
                    <OverviewAdmin OnQuickAction="HandleQuickAction" />
                    break;
                case "users":
                    <UsersAdmin />
                    break;
                case "rewards":
                    <RewardsAdmin />
                    break;
                case "purchase-rewards":
                    <PurchaseRewardsAdmin />
                    break;
                case "settings":
                    <SettingsAdmin />
                    break;
                case "plans":
                    <PlansAdmin />
                    break;
                case "subs":
                    <SubscriptionsAdmin />
                    break;
                case "notifications":
                    <NotificationsAdmin />
                    break;
                case "support":
                    <SupportAdmin />
                    break;
                case "audit":
                    <AuditAdmin />
                    break;
                case "db":
                    <DatabaseAdmin />
                    break;
                case "snapshots":
                    <SnapshotsAdmin />
                    break;
                case "knowledge":
                    <Knowledge />
                    break;
                case "pipelines":
                    <PipelinesAdmin />
                    break;
            }
        }
    </main>
</div>


<style>
    /* Modern AI/Tech Admin Panel - Futuristic Design 2025 */
    .admin-shell {
        display: flex;
        height: 100vh;
        overflow: hidden;
        background: var(--bg-canvas);
    }

    .admin-sidebar {
        width: 290px;
        background: var(--bg-glass);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-right: 1px solid var(--border-default);
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        transition: all 0.3s ease;
    }

    [data-theme="dark"] .admin-sidebar {
        background: rgba(10, 15, 26, 0.95);
        border-right-color: var(--border-glow);
        box-shadow: 1px 0 30px rgba(59, 130, 246, 0.05);
    }

    .admin-brand {
        padding: 1.125rem;
        text-align: center;
        border-radius: 16px;
        border: 1px solid var(--border-default);
        background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
        position: relative;
        overflow: hidden;
    }

    .admin-brand::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--primary-500), var(--accent-purple), var(--accent-teal));
    }

    [data-theme="dark"] .admin-brand {
        box-shadow: 0 4px 20px rgba(59, 130, 246, 0.1);
    }

    .admin-brand-title {
        font-size: 1.25rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--primary-500) 0%, var(--accent-purple) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .admin-brand-sub {
        font-size: 0.75rem;
        color: var(--text-tertiary);
        margin-top: 0.25rem;
        letter-spacing: 0.05em;
    }

    .admin-nav {
        display: flex;
        flex-direction: column;
        gap: 0.375rem;
    }

    .admin-nav button {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        border: 1px solid transparent;
        border-radius: 12px;
        background: transparent;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-secondary);
        cursor: pointer;
        text-align: left;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
    }

    .admin-nav button:hover {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(139, 92, 246, 0.08) 100%);
        color: var(--text-primary);
        transform: translateX(4px);
    }

    .admin-nav button.active {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.12) 0%, rgba(139, 92, 246, 0.12) 100%);
        border-color: rgba(59, 130, 246, 0.2);
        color: var(--primary-500);
        font-weight: 700;
    }

    .admin-nav button.active::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 3px;
        height: 60%;
        background: linear-gradient(180deg, var(--primary-500), var(--accent-purple));
        border-radius: 0 3px 3px 0;
    }

    [data-theme="dark"] .admin-nav button.active {
        box-shadow: 0 0 25px rgba(59, 130, 246, 0.15);
    }

    .admin-sidebar-footer {
        margin-top: auto;
        padding-top: 1rem;
        border-top: 1px solid var(--border-default);
    }

    .admin-nav-back {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border-default);
        border-radius: 12px;
        background: var(--bg-primary);
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-primary);
        cursor: pointer;
        transition: all 0.2s ease;
        width: 100%;
    }

    .admin-nav-back:hover {
        background: var(--bg-hover);
        border-color: var(--primary-500);
        color: var(--primary-500);
    }

    .admin-main {
        flex: 1;
        padding: 1.75rem;
        overflow: auto;
        background: var(--bg-canvas);
    }

    .admin-topbar {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .admin-title {
        font-size: 1.75rem;
        font-weight: 800;
        letter-spacing: -0.03em;
        background: linear-gradient(135deg, var(--text-primary) 0%, var(--primary-500) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    [data-theme="dark"] .admin-title {
        background: linear-gradient(135deg, #f1f5f9 0%, var(--primary-400) 100%);
        -webkit-background-clip: text;
        background-clip: text;
    }

    .admin-subtitle {
        margin-top: 0.25rem;
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .admin-userpill {
        display: flex;
        gap: 0.5rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .pill {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 0.875rem;
        border-radius: 10px;
        border: 1px solid var(--border-default);
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .pill-muted {
        color: var(--text-secondary);
        background: var(--bg-tertiary);
    }

    [data-theme="dark"] .pill {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        border-color: rgba(59, 130, 246, 0.2);
    }

    .admin-grid {
        display: grid;
        grid-template-columns: 1.6fr 0.9fr;
        gap: 1.25rem;
    }

    .admin-card{
        background: var(--card-bg);
        border:1px solid var(--border-default);
        border-radius:18px;
        padding:16px;
        box-shadow: var(--shadow-md);
        transition: all 0.2s ease;
    }

    .admin-card:hover {
        box-shadow: var(--card-hover-shadow);
        border-color: rgba(59, 130, 246, 0.3);
    }

    .admin-card-wide{ grid-column: 1 / span 1; }
    .admin-card-title{ font-size:16px; font-weight:900; color: var(--text-primary); }
    .admin-card-sub{ margin-top:4px; font-size:12px; color: var(--text-secondary); }

    .admin-error{
        padding:12px;
        border-radius:12px;
        background: rgba(239, 68, 68, 0.1);
        color: var(--color-error);
        border:1px solid rgba(239, 68, 68, 0.3);
        margin-top:10px;
        font-weight:700;
    }

    .admin-muted{ color: var(--text-secondary); }

    .admin-btn{
        padding:10px 12px;
        border-radius:12px;
        border:1px solid var(--border-default);
        background: var(--bg-primary);
        color: var(--text-primary);
        cursor:pointer;
        font-weight:700;
        transition: all 0.15s ease;
    }
    .admin-btn:hover{ 
        background: var(--bg-hover);
        border-color: var(--border-strong);
    }
    .admin-btn:disabled{ opacity:0.5; cursor:not-allowed; }

    .admin-btn-primary{
        border-color: var(--primary-500);
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        color: var(--primary-500);
    }
    .admin-btn-primary:hover:not(:disabled){
        background: var(--btn-primary-bg);
        color: white;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
    }
    
    .admin-btn-danger{
        border-color: var(--color-error);
        background: rgba(239, 68, 68, 0.1);
        color: var(--color-error);
    }
    .admin-btn-danger:hover:not(:disabled){
        background: var(--color-error);
        color: white;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
    }
    
    .admin-btn-xs{
        padding:7px 10px;
        border-radius:10px;
        font-size:12px;
    }

    .admin-form-grid{
        display:grid;
        grid-template-columns: 1fr 1fr;
        gap:12px;
        margin-top:12px;
    }

    .admin-form-field{ display:flex; flex-direction:column; gap:6px; }
    .admin-form-field-wide{ grid-column: 1 / span 2; }
    .admin-form-field label{ font-size:12px; color: var(--text-secondary); font-weight:700; }
    .admin-form-field input, .admin-form-field select, .admin-form-field textarea{
        padding:10px 12px;
        border-radius:12px;
        border:1px solid var(--border-default);
        background: var(--input-bg);
        color: var(--text-primary);
        font-size:14px;
        outline:none;
        transition: all 0.15s ease;
    }
    .admin-form-field input:focus, .admin-form-field select:focus, .admin-form-field textarea:focus{
        border-color: var(--primary-500);
        box-shadow: var(--shadow-focus);
    }

    .admin-stats{
        display:grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        gap:10px;
        margin-top:12px;
    }
    .stat{
        border:1px solid var(--border-default);
        border-radius:14px;
        background: var(--bg-elevated);
        padding:12px;
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
    }
    .stat::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--primary-500), var(--accent-purple));
        opacity: 0;
        transition: opacity 0.2s ease;
    }
    .stat:hover{
        border-color: var(--primary-500);
        box-shadow: var(--card-hover-shadow);
        transform: translateY(-2px);
    }
    .stat:hover::before {
        opacity: 1;
    }
    .stat-label{ font-size:12px; color: var(--text-secondary); font-weight:700; text-transform: uppercase; letter-spacing: 0.05em; }
    .stat-value{ font-size:20px; font-weight:800; color: var(--text-primary); margin-top:4px; }
    .stat-hint{ font-size:11px; color: var(--text-tertiary); margin-top:2px; }

    .admin-quick{
        display:flex;
        flex-direction:column;
        gap:10px;
        margin-top:12px;
    }
    .quick-row{
        padding:12px 14px;
        border:1px solid var(--border-default);
        border-radius:14px;
        background: var(--bg-elevated);
        display:flex;
        justify-content:space-between;
        align-items:center;
        gap:10px;
        transition: all 0.15s ease;
        cursor: pointer;
    }
    .quick-row:hover{
        border-color: var(--primary-500);
        background: var(--bg-hover);
        transform: translateX(4px);
    }
    .quick-label{ font-weight:800; color: var(--text-primary); font-size:13px; }
    .quick-hint{ color: var(--text-secondary); font-size:12px; }

    .admin-table-wrap{
        overflow:auto;
        border:1px solid var(--border-default);
        border-radius:16px;
        background: var(--card-bg);
    }
    .admin-table{
        width:100%;
        border-collapse:separate;
        border-spacing:0;
        font-size:13px;
    }
    .admin-table th{
        position:sticky;
        top:0;
        background: var(--table-header-bg);
        text-align:left;
        padding:10px;
        border-bottom:1px solid var(--border-default);
        font-weight:700;
        color: var(--text-secondary);
        white-space:nowrap;
        text-transform: uppercase;
        font-size: 11px;
        letter-spacing: 0.05em;
    }
    .admin-table td{
        padding:10px;
        border-bottom:1px solid var(--border-default);
        color: var(--text-primary);
        vertical-align:top;
        max-width:340px;
        word-break: break-word;
    }
    .admin-table tr:last-child td{ border-bottom:none; }
    .admin-table tr:hover td{ background: var(--table-row-hover); }

    .admin-modal-backdrop{
        position:fixed;
        top:0; left:0; right:0; bottom:0;
        background: var(--bg-overlay);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        display:flex;
        align-items:center;
        justify-content:center;
        padding:16px;
        z-index: 9999;
    }
    .admin-modal{
        width:min(900px, 96vw);
        background: var(--card-bg);
        border:1px solid var(--border-default);
        border-radius:18px;
        padding:16px;
        box-shadow: var(--shadow-2xl);
        animation: modalSlideUp 0.3s ease-out;
    }

    [data-theme="dark"] .admin-modal {
        border-color: var(--border-glow);
        box-shadow: var(--shadow-2xl), 0 0 40px rgba(59, 130, 246, 0.1);
    }

    .admin-modal-title{ font-size:16px; font-weight:800; color: var(--text-primary); }
    .admin-modal-sub{ font-size:12px; color: var(--text-secondary); margin-top:4px; }
    .admin-json{
        width:100%;
        margin-top:12px;
        padding:12px;
        border-radius:14px;
        border:1px solid var(--border-default);
        background: var(--bg-secondary);
        color: var(--text-primary);
        font-family: var(--font-mono);
        font-size:13px;
    }
    .admin-json:focus{
        border-color: var(--primary-500);
        box-shadow: var(--shadow-focus);
        outline: none;
    }

    @@media (max-width: 1100px) {
        .admin-grid {
            grid-template-columns: 1fr;
        }
    .admin-card-wide{ grid-column: auto; }
    .admin-sidebar{ width:240px; }
    .admin-stats{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
    .admin-form-grid{ grid-template-columns: 1fr; }
    .admin-form-field-wide{ grid-column:auto; }
}

</style>

@code {
    private string Current = "overview";

    protected override void OnInitialized()
    {
        // keep last tab per browser session
        Current = Session.GetUser()?.Role?.ToLower() == "admin" ? "overview" : "overview";
    }

    private bool IsAdmin()
        => string.Equals(Session.GetUser()?.Role, "Admin", StringComparison.OrdinalIgnoreCase);

    private void Select(string tab) => Current = tab;

    private string NavBtn(string tab) => Current == tab ? "active" : "";

    private static string TitleFor(string tab) => tab switch
    {
        "overview" => "Overview",
        "users" => "Users & Credits",
        "rewards" => "Signup Referral Rewards",
        "purchase-rewards" => "Purchase Referral Rewards",
        "settings" => "System Settings",
        "plans" => "Plans & Policies",
        "subs" => "Subscriptions",
        "notifications" => "Notifications",
        "support" => "Support Tickets",
        "audit" => "Audit Log",
        "db" => "Database Manager",
        "snapshots" => "Snapshots",
        "knowledge" => "Knowledge Base",
        "pipelines" => "Pipeline Management",
        _ => "Admin"
    };

    private static string TitleIcon(string tab) => "";

    private static string RoleIcon(string? role) => "";

    private void HandleQuickAction(string action)
    {
        // Handle quick actions from the overview component
        switch (action)
        {
            case "users":
                Select("users");
                break;
            case "rewards":
                Select("rewards");
                break;
            case "purchase-rewards":
                Select("purchase-rewards");
                break;
            case "plans":
                Select("plans");
                break;
            case "subs":
                Select("subs");
                break;
            case "notifications":
                Select("notifications");
                break;
            case "audit":
                Select("audit");
                break;
            case "db":
                Select("db");
                break;
            case "snapshots":
                Select("snapshots");
                break;
            case "knowledge":
                Select("knowledge");
                break;
            case "pipelines":
                Select("pipelines");
                break;
        }
    }
}
