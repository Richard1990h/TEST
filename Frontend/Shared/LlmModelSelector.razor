@inject HttpClient Http
@inject IJSRuntime JSRuntime

<div class="llm-selector-container">
    <div class="llm-selector-row">
        @* Backend Dropdown *@
        <div class="llm-dropdown-wrapper">
            <button class="llm-dropdown-button @(IsProviderDropdownOpen ? "open" : "")"
                    @onclick="ToggleProviderDropdown"
                    disabled="@IsLoading">
                <span class="llm-dropdown-label">Model Backend</span>
                <span class="llm-dropdown-value">
                    @GetProviderDisplayName(SelectedProvider)
                    @if (SelectedProvider == LlmProvider.Ollama && !OllamaAvailable)
                    {
                        <span class="status-indicator offline" title="Ollama not running"></span>
                    }
                    else if (SelectedProvider == LlmProvider.Ollama && OllamaAvailable)
                    {
                        <span class="status-indicator online" title="Ollama running"></span>
                    }
                </span>
                <span class="dropdown-arrow">@(IsProviderDropdownOpen ? "▲" : "▼")</span>
            </button>

            @if (IsProviderDropdownOpen)
            {
                <div class="llm-dropdown-menu">
                    <div class="llm-dropdown-header">
                        <span class="llm-dropdown-title">Select Backend</span>
                        <button class="llm-refresh-button" @onclick="RefreshProviders" title="Refresh">↻</button>
                    </div>
                    @foreach (var provider in Providers)
                    {
                        <div class="llm-dropdown-item @(provider.Provider == SelectedProvider ? "active" : "") @(!provider.IsAvailable ? "disabled" : "")"
                             @onclick="() => SelectProvider(provider)">
                            <span class="provider-name">@provider.Name</span>
                            @if (provider.Provider == LlmProvider.Ollama)
                            {
                                <span class="status-indicator @(provider.IsAvailable ? "online" : "offline")"
                                      title="@(provider.IsAvailable ? "Running" : "Not running")"></span>
                            }
                            <span class="model-count">@provider.Models.Count models</span>
                        </div>
                    }
                </div>
            }
        </div>

        @* Local Model Dropdown *@
        @if (SelectedProvider == LlmProvider.Local)
        {
            <div class="llm-dropdown-wrapper">
                <button class="llm-dropdown-button @(IsModelDropdownOpen ? "open" : "")"
                        @onclick="ToggleModelDropdown"
                        disabled="@(IsLoading || !LocalModels.Any())">
                    <span class="llm-dropdown-label">Local Model</span>
                    <span class="llm-dropdown-value">
                        @if (string.IsNullOrEmpty(SelectedModel))
                        {
                            <span class="placeholder">Select model...</span>
                        }
                        else
                        {
                            @SelectedModelDisplay
                        }
                    </span>
                    <span class="dropdown-arrow">@(IsModelDropdownOpen ? "▲" : "▼")</span>
                </button>

                @if (IsModelDropdownOpen)
                {
                    <div class="llm-dropdown-menu model-menu">
                        <div class="llm-dropdown-header">
                            <span class="llm-dropdown-title">Select Local Model</span>
                        </div>
                        @if (!LocalModels.Any())
                        {
                            <div class="llm-dropdown-item disabled">
                                <span>No local models found in /LLM folder</span>
                            </div>
                        }
                        else
                        {
                            @foreach (var model in LocalModels)
                            {
                                <div class="llm-dropdown-item @(model.Name == SelectedModel ? "active" : "")"
                                     @onclick="() => SelectModel(model)">
                                    <span class="model-name">@model.DisplayName</span>
                                    @if (!string.IsNullOrEmpty(model.ParameterSize))
                                    {
                                        <span class="model-size">@model.ParameterSize</span>
                                    }
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        }

        @* Ollama Model Dropdown *@
        @if (SelectedProvider == LlmProvider.Ollama)
        {
            <div class="llm-dropdown-wrapper">
                <button class="llm-dropdown-button @(IsOllamaDropdownOpen ? "open" : "")"
                        @onclick="ToggleOllamaDropdown"
                        disabled="@(IsLoading || !OllamaModels.Any())">
                    <span class="llm-dropdown-label">Ollama Model</span>
                    <span class="llm-dropdown-value">
                        @if (string.IsNullOrEmpty(SelectedModel))
                        {
                            <span class="placeholder">Select model...</span>
                        }
                        else
                        {
                            @SelectedModelDisplay
                        }
                    </span>
                    <span class="dropdown-arrow">@(IsOllamaDropdownOpen ? "▲" : "▼")</span>
                </button>

                @if (IsOllamaDropdownOpen)
                {
                    <div class="llm-dropdown-menu model-menu">
                        <div class="llm-dropdown-header">
                            <span class="llm-dropdown-title">Select Ollama Model</span>
                        </div>
                        @if (!OllamaModels.Any())
                        {
                            <div class="llm-dropdown-item disabled">
                                <span>No Ollama models available</span>
                            </div>
                        }
                        else
                        {
                            @foreach (var model in OllamaModels)
                            {
                                <div class="llm-dropdown-item @(model.Name == SelectedModel ? "active" : "")"
                                     @onclick="() => SelectModel(model)">
                                    <span class="model-name">@model.DisplayName</span>
                                    @if (!string.IsNullOrEmpty(model.ParameterSize))
                                    {
                                        <span class="model-size">@model.ParameterSize</span>
                                    }
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        }
    </div>

    @if (!string.IsNullOrEmpty(StatusMessage))
    {
        <div class="llm-status-message @StatusClass">
            @StatusMessage
        </div>
    }
</div>

