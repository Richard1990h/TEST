@code {
    // Enum must match backend
    public enum LlmProvider { Local = 0, Ollama = 1 }

    private List<ProviderInfo> Providers = new();
    private LlmProvider SelectedProvider = LlmProvider.Local;
    private string? SelectedModel;
    private string SelectedModelDisplay
        => (SelectedProvider == LlmProvider.Ollama ? OllamaModels : LocalModels)
            .FirstOrDefault(m => m.Name == SelectedModel)?.DisplayName ?? SelectedModel ?? "";

    private bool IsProviderDropdownOpen = false;
    private bool IsModelDropdownOpen = false;
    private bool IsOllamaDropdownOpen = false;
    private bool IsLoading = false;
    private bool OllamaAvailable = false;

    private string StatusMessage = "";
    private string StatusClass = "info";

    private List<ModelInfo> LocalModels => Providers
        .FirstOrDefault(p => p.Provider == LlmProvider.Local)?.Models ?? new();

    private List<ModelInfo> OllamaModels => Providers
        .FirstOrDefault(p => p.Provider == LlmProvider.Ollama)?.Models ?? new();

    protected override async Task OnInitializedAsync()
    {
        await RefreshProviders();
    }

    private async Task RefreshProviders()
    {
        IsLoading = true;
        StateHasChanged();

        try
        {
            var response = await Http.GetFromJsonAsync<ProvidersResponse>("api/llm/providers");
            if (response != null)
            {
                Providers = response.Providers;
                SelectedProvider = response.CurrentProvider;
                SelectedModel = response.CurrentModel;

                var ollamaProvider = Providers.FirstOrDefault(p => p.Provider == LlmProvider.Ollama);
                OllamaAvailable = ollamaProvider?.IsAvailable ?? false;
            }
        }
        catch (Exception ex)
        {
            ShowStatus($"Failed to load providers: {ex.Message}", "error");
        }
        finally
        {
            IsLoading = false;
            IsProviderDropdownOpen = false;
            IsModelDropdownOpen = false;
            IsOllamaDropdownOpen = false;
            StateHasChanged();
        }
    }

    private void ToggleProviderDropdown()
    {
        IsProviderDropdownOpen = !IsProviderDropdownOpen;
        if (IsProviderDropdownOpen)
        {
            IsModelDropdownOpen = false;
            IsOllamaDropdownOpen = false;
        }
    }

    private void ToggleModelDropdown()
    {
        IsModelDropdownOpen = !IsModelDropdownOpen;
        if (IsModelDropdownOpen)
        {
            IsProviderDropdownOpen = false;
            IsOllamaDropdownOpen = false;
        }
    }

    private void ToggleOllamaDropdown()
    {
        IsOllamaDropdownOpen = !IsOllamaDropdownOpen;
        if (IsOllamaDropdownOpen)
        {
            IsProviderDropdownOpen = false;
            IsModelDropdownOpen = false;
        }
    }

    private void SelectProvider(ProviderInfo provider)
    {
        if (!provider.IsAvailable)
        {
            ShowStatus($"{provider.Name} is not available", "error");
            return;
        }

        if (provider.Provider != SelectedProvider)
        {
            SelectedProvider = provider.Provider;
            SelectedModel = null; // Reset model selection
        }

        IsProviderDropdownOpen = false;
        IsModelDropdownOpen = false;
        IsOllamaDropdownOpen = false;
        StateHasChanged();
    }

    private async Task SelectModel(ModelInfo model)
    {
        if (model.Name == SelectedModel)
        {
            IsModelDropdownOpen = false;
            IsOllamaDropdownOpen = false;
            return;
        }

        IsLoading = true;
        IsModelDropdownOpen = false;
        IsOllamaDropdownOpen = false;
        ShowStatus($"Loading {model.DisplayName}...", "info");

        try
        {
            var request = new ModelSelectionRequest
            {
                ModelName = model.Name,
                Provider = SelectedProvider
            };

            var response = await Http.PostAsJsonAsync("api/llm/load", request);

            if (response.IsSuccessStatusCode)
            {
                SelectedModel = model.Name;
                ShowStatus($"Loaded {model.DisplayName}", "success");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                ShowStatus($"Failed to load model: {error}", "error");
            }
        }
        catch (Exception ex)
        {
            ShowStatus($"Error: {ex.Message}", "error");
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();

            // Clear status after delay
            await Task.Delay(3000);
            StatusMessage = "";
            StateHasChanged();
        }
    }

    private void ShowStatus(string message, string type)
    {
        StatusMessage = message;
        StatusClass = type;
    }

    private string GetProviderDisplayName(LlmProvider provider)
    {
        return provider switch
        {
            LlmProvider.Local => "Local (GGUF)",
            LlmProvider.Ollama => "Ollama",
            _ => provider.ToString()
        };
    }

    // DTOs matching backend
    public class ProvidersResponse
    {
        public LlmProvider CurrentProvider { get; set; }
        public string? CurrentModel { get; set; }
        public List<ProviderInfo> Providers { get; set; } = new();
    }

    public class ProviderInfo
    {
        public LlmProvider Provider { get; set; }
        public string Name { get; set; } = "";
        public bool IsAvailable { get; set; }
        public List<ModelInfo> Models { get; set; } = new();
    }

    public class ModelInfo
    {
        public string Name { get; set; } = "";
        public string DisplayName { get; set; } = "";
        public LlmProvider Provider { get; set; }
        public long? SizeBytes { get; set; }
        public string? ParameterSize { get; set; }
    }

    public class ModelSelectionRequest
    {
        public string ModelName { get; set; } = "";
        public LlmProvider Provider { get; set; }
    }
}
